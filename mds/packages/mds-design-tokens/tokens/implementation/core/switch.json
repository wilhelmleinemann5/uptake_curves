{
    "core": {
        "switch": {
            "track": {
                "transition-properties": {
                    "value": "all"
                },
                "transition-duration": {
                    "value": "$global.transition.fast.duration"
                },
                "transition-timing": {
                    "value": "$global.transition.fast.timing"
                },
                "border-width": {
                    "value": "$global.border.width"
                },
                "border-radius": {
                    "value": 100
                },
                "border-style": {
                    "value": "$global.border.style"
                }
            },
            "track-handle": {
                "gap": {
                    "value": 1
                }
            },
            "off": {
                "track": {
                    "background-color": {
                        "value": "$brand.appearance.neutral.strongest.background-color"
                    }
                },
                "track-handle": {
                    "background-color": {
                        "value": "$brand.appearance.neutral.default.background-color"
                    }
                },
                "hover": {
                    "track": {
                        "background-color": {
                            "value": "$brand.appearance.state.neutral.strongest.hover.background-color"
                        }
                    }
                }
            },
            "on": {
                "track": {
                    "background-color": {
                        "value": "$brand.appearance.primary.default.background-color"
                    }
                },
                "track-handle": {
                    "background-color": {
                        "value": "$brand.appearance.primary.default.on-background-color"
                    }
                },
                "hover": {
                    "track": {
                        "background-color": {
                            "value": "$brand.appearance.state.primary.default.hover.background-color"
                        }
                    }
                }
            },
            "small": {
                "gap": {
                    "value": 8
                },
                "track": {
                    "height": {
                        "value": 16
                    },
                    "width": {
                        "value": 28
                    },
                    "margin": {
                        "value": 2
                    }
                },
                "track-handle": {
                    "height": {
                        "value": 12
                    },
                    "width": {
                        "value": 12
                    }
                },
                "label": {
                    "line-height": {
                        "value": 20
                    }
                }
            },
            "medium": {
                "gap": {
                    "value": 8
                },
                "track": {
                    "height": {
                        "value": 20
                    },
                    "width": {
                        "value": 36
                    },
                    "margin": {
                        "value": 2
                    }
                },
                "track-handle": {
                    "height": {
                        "value": 16
                    },
                    "width": {
                        "value": 16
                    }
                },
                "label": {
                    "line-height": {
                        "value": 24
                    }
                }
            },
            "large": {
                "gap": {
                    "value": 12
                },
                "track": {
                    "height": {
                        "value": 24
                    },
                    "width": {
                        "value": 44
                    },
                    "margin": {
                        "value": 0
                    }
                },
                "track-handle": {
                    "height": {
                        "value": 20
                    },
                    "width": {
                        "value": 20
                    }
                },
                "label": {
                    "line-height": {
                        "value": 24
                    }
                }
            }
        }
    }
}