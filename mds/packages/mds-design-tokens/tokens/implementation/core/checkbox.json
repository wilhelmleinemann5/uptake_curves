{
    "core": {
        "checkbox": {
            "transition-properties": {
                "value": "all"
            },
            "transition-duration": {
                "value": "$global.transition.fast.duration"
            },
            "transition-timing": {
                "value": "$global.transition.fast.timing"
            },
            "border-width": {
                "value": "$global.border.width"
            },
            "border-radius": {
                "value": "$brand.border.small.radius"
            },
            "border-style": {
                "value": "$global.border.style"
            },
            "off": {
                "disabled": {
                    "background-color": {
                        "value": "$brand.appearance.neutral.weakest.background-color"
                    }
                },
                "background-color": {
                    "value": "$brand.appearance.neutral.default.background-color"
                },
                "border-color": {
                    "value": "$brand.appearance.neutral.default.border-color"
                },
                "hover": {
                    "border-color": {
                        "value": "$brand.appearance.state.neutral.default.hover.border-color"
                    }
                }
            },
            "on": {
                "background-color": {
                    "value": "$brand.appearance.primary.default.background-color"
                },
                "border-color": {
                    "value": "$brand.appearance.primary.default.border-color"
                },
                "checkmark-color": {
                    "value": "$brand.appearance.primary.default.on-background-color"
                },
                "hover": {
                    "background-color": {
                        "value": "$brand.appearance.state.primary.default.hover.background-color"
                    },
                    "border-color": {
                        "value": "$brand.appearance.state.primary.default.hover.border-color"
                    }
                }
            },
            "small": {
                "gap": {
                    "value": 8
                },
                "checkmark": {
                    "height": {
                        "value": 16
                    },
                    "width": {
                        "value": 16
                    },
                    "margin": {
                        "value": 2
                    }
                },
                "label": {
                    "line-height": {
                        "value": 20
                    }
                }
            },
            "medium": {
                "gap": {
                    "value": 8
                },
                "checkmark": {
                    "height": {
                        "value": 20
                    },
                    "width": {
                        "value": 20
                    },
                    "margin": {
                        "value": 2
                    }
                },
                "label": {
                    "line-height": {
                        "value": 24
                    }
                }
            },
            "large": {
                "gap": {
                    "value": 12
                },
                "checkmark": {
                    "height": {
                        "value": 24
                    },
                    "width": {
                        "value": 24
                    },
                    "margin": {
                        "value": 0
                    }
                },
                "label": {
                    "line-height": {
                        "value": 24
                    }
                }
            },
            "error": {
                "background-color": {
                    "value": "$brand.appearance.error.default.background-color"
                },
                "border-color": {
                    "value": "$brand.appearance.error.default.border-color"
                }
            }
        }
    }
}