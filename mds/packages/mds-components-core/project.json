{
    "name": "mds-components-core",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/mds-components-core",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "nx:noop",
            "dependsOn": [
                "build:index.bundle",
                "build:index.bundle.esm",
                "build:vscode-html-data"
            ]
        },
        "build:make-mds-core": {
            "command": "node tools/scripts/generate-packages/make-mds-core.mjs",
            "dependsOn": [
                "^build",
                "mc-avatar:build",
                "mc-button-group-item:build",
                "mc-button-group:build",
                "mc-button:build",
                "mc-button:build",
                "mc-calendar:build",
                "mc-card:build",
                "mc-checkbox-group:build",
                "mc-checkbox:build",
                "mc-date-range:build",
                "mc-error:build",
                "mc-file-upload:build",
                "mc-hint:build",
                "mc-icon:build",
                "mc-input-date:build",
                "mc-input-time:build",
                "mc-input:build",
                "mc-label:build",
                "mc-list-item:build",
                "mc-list:build",
                "mc-loading-indicator:build",
                "mc-menu:build",
                "mc-modal:build",
                "mc-month-year-picker:build",
                "mc-multi-choice-fieldset:build",
                "mc-multi-select:build",
                "mc-notification:build",
                "mc-number-stepper:build",
                "mc-option:build",
                "mc-pagination:build",
                "mc-picker-item:build",
                "mc-picker:build",
                "mc-popover:build",
                "mc-radio-group:build",
                "mc-radio:build",
                "mc-segmented-control-item:build",
                "mc-segmented-control:build",
                "mc-select-native:build",
                "mc-select:build",
                "mc-switch-group:build",
                "mc-switch:build",
                "mc-tab-bar:build",
                "mc-tab:build",
                "mc-table:build",
                "mc-tag:build",
                "mc-text-and-icon:build",
                "mc-textarea:build",
                "mc-time-picker:build",
                "mc-toast:build",
                "mc-tooltip:build",
                "mc-typeahead:build",
                "mc-step-indicator-item:build",
                "mc-step-indicator:build",
                "mc-dialog:build",
                "mc-link-button:build",
                "mc-drawer:build",
                "mc-top-bar:build",
                "mc-side-bar:build",
                "mc-theme-switch:build",
                "mc-progress-indicator:build",
                "mc-badge:build",
                "mc-typeahead-multi-select:build",
                "mc-input-group:build"
            ]
        },
        "build:index.bundle": {
            "command": "node tools/scripts/esbuild-config/single-bundle-file.mjs",
            "dependsOn": [
                "build:make-mds-core"
            ]
        },
        "build:index.bundle.esm": {
            "command": "node tools/scripts/esbuild-config/single-bundle.config.mjs",
            "dependsOn": [
                "build:make-mds-core",
                "copy:design-tokens"
            ]
        },
        "copy:design-tokens": {
            "dependsOn": [
                "mds-design-tokens:build"
            ],
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "recursive-copy -w dist/packages/mds-design-tokens/implementation packages/mds-design-tokens/implementation"
                ]
            }
        },
        "build:vscode-html-data": {
            "executor": "nx:run-commands",
            "options": {
                "commands": [
                    "wca analyze \"**/*index.ts\" --format vscode --outFile dist/packages/mds-components-core/web-components.html-data.json"
                ]
            },
            "dependsOn": [
                "build:make-mds-core"
            ]
        },
        "release": {
            "command": "node tools/scripts/publish.mjs mds-components-core",
            "options": {
                "outputPath": "dist/packages/mds-components-core"
            }
        }
    },
    "tags": []
}