{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*", "*.ssr.js"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "warn"
      }
    },
    {
      "files": ["*.json"],
      "parser": "jsonc-eslint-parser",
      "rules": {
        "@nx/dependency-checks": [
          "error",
          {
            "ignoredFiles": ["{projectRoot}/tests/**/*.{js,ts,mjs,mts}", "{projectRoot}/vite.config.ts"],
            "ignoredDependencies": ["lit", "@storybook/types", "change-case", "@maersk-global/icons", "@storybook/csf"]
          }
        ]
      }
    }
  ]
}
