{
  "name": "mc-badge",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/mc-badge/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:noop",
      "dependsOn": [
        "build:compile-js",
        "build:vscode-html-data",
        "build:custom-element-manifest"
      ]
    },
    "build:custom-element-manifest": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cd packages/mc-badge && cem analyze --config ../../tools/configs/custom-elements-manifest.config.mjs --outdir ../../dist/packages/mds-components-core-badge"
        ]
      }
    },
    "build:vscode-html-data": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "wca analyze \"packages/mc-badge/**/*index.ts\" --format vscode --outFile dist/packages/mds-components-core-badge/web-components.html-data.json"
        ]
      }
    },
    "build:compile-js": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "target": "es2020",
        "minify": true,
        "deleteOutputPath": false,
        "outputPath": "dist/packages/mds-components-core-badge",
        "outdir": "dist/packages/mds-components-core-badge",
        "main": "packages/mc-badge/src/index.ts",
        "tsConfig": "packages/mc-badge/tsconfig.lib.json",
        "assets": [
          "packages/mc-badge/*.md"
        ],
        "esbuildConfig": "tools/scripts/esbuild-config/general.config.cjs"
      }
    },
    "generate:metadata": {
      "command": "cd packages/mc-badge && node ../../tools/scripts/generate-metadata/components/generate.mjs"
    },
    "release": {
      "command": "node tools/scripts/publish.mjs mc-badge",
      "options": {
        "outputPath": "dist/packages/mds-components-core-badge"
      }
    },
    "lint": {
      "executor": "nx:noop",
      "dependsOn": [
        "lint:eslint",
        "lint:stylelint"
      ]
    },
    "lint:eslint": {
      "executor": "@nx/eslint:lint"
    },
    "lint:stylelint": {
      "executor": "nx-stylelint:lint",
      "options": {
        "lintFilePatterns": [
          "packages/mc-badge/**/*.css",
          "packages/mc-badge/**/*.scss"
        ],
        "fix": true
      }
    },
    "test:ssr": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "web-test-runner packages/mc-badge/tests/**/*.ssr.js"
        ]
      },
      "dependsOn": [
        "build",
        "mds:test:ssr:map-node-modules"
      ]
    },
    "test:headless": {
      "executor": "@nx/cypress:cypress",
      "options": {
        "cypressConfig": "cypress.config.ts",
        "testingType": "component",
        "skipServe": true,
        "spec": "./packages/mc-badge/**/*.component-spec.ts"
      }
    },
    "vitest": {
      "executor": "@nx/vite:test",
      "options": {
        "buildTargetName": "build",
        "previewTargetName": "preview",
        "testTargetName": "vitest",
        "serveTargetName": "serve",
        "serveStaticTargetName": "serve-static"
      }
    }
  },
  "tags": []
}