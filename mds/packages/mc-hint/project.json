{
  "name": "mc-hint",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/mc-hint/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:noop",
      "dependsOn": [
        "build:compile-js",
        "build:vscode-html-data",
        "build:custom-element-manifest"
      ]
    },
    "build:custom-element-manifest": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cd packages/mc-hint && cem analyze --config ../../tools/configs/custom-elements-manifest.config.mjs --outdir ../../dist/packages/mds-components-core-hint"
        ]
      }
    },
    "build:vscode-html-data": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "wca analyze \"packages/mc-hint/**/*index.ts\" --format vscode --outFile dist/packages/mds-components-core-hint/web-components.html-data.json"
        ]
      }
    },
    "build:compile-js": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "target": "es2020",
        "minify": true,
        "deleteOutputPath": false,
        "outputPath": "dist/packages/mds-components-core-hint",
        "outdir": "dist/packages/mds-components-core-hint",
        "main": "packages/mc-hint/src/index.ts",
        "tsConfig": "packages/mc-hint/tsconfig.lib.json",
        "assets": [
          "packages/mc-hint/*.md"
        ],
        "esbuildConfig": "tools/scripts/esbuild-config/general.config.cjs"
      }
    },
    "generate:metadata": {
      "command": "cd packages/mc-hint && node ../../tools/scripts/generate-metadata/components/generate.mjs"
    },
    "release": {
      "command": "node tools/scripts/publish.mjs mc-hint",
      "options": {
        "outputPath": "dist/packages/mds-components-core-hint"
      }
    },
    "lint": {
      "executor": "nx:noop",
      "dependsOn": [
        "lint:eslint",
        "lint:stylelint"
      ]
    },
    "lint:eslint": {
      "executor": "@nx/eslint:lint"
    },
    "lint:stylelint": {
      "executor": "nx-stylelint:lint",
      "options": {
        "lintFilePatterns": [
          "packages/mc-hint/**/*.css",
          "packages/mc-hint/**/*.scss"
        ],
        "fix": true
      }
    }
  },
  "tags": []
}