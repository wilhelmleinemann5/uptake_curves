{
  "name": "mds-shared-types",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/mds-shared-types",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:noop",
      "dependsOn": [
        "build:compile-js",
        "build:vscode-html-data",
        "copy:package"
      ]
    },
    "copy:package": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "recursive-copy -w packages/mds-shared-types dist/packages/mds-shared-types  -f 'package.json'"
        ]
      }
    },
    "build:compile-js": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "target": "es2020",
        "minify": true,
        "deleteOutputPath": false,
        "outputPath": "dist/packages/mds-shared-types",
        "outdir": "dist/packages/mds-shared-types",
        "main": "packages/mds-shared-types/src/index.ts",
        "tsConfig": "packages/mds-shared-types/tsconfig.lib.json",
        "assets": [
          "packages/mds-shared-types/*.md"
        ],
        "esbuildConfig": "tools/scripts/esbuild-config/general.config.cjs"
      }
    },
    "release": {
      "command": "node tools/scripts/publish.mjs mds-shared-types",
      "options": {
        "outputPath": "dist/packages/mds-shared-types"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    }
  },
  "tags": []
}