{
  "name": "mds-foundations",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/mds-foundations",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:noop",
      "dependsOn": [
        "run:build",
        "copy:assets",
      ]
    },
    "generate:metadata": {
      "command": "node tools/scripts/generate-metadata/foundations/generate.mjs"
    },
    "run:build": {
      "command": "node packages/mds-foundations/scripts/build.mjs",
      "dependsOn": [
        "mds-design-tokens:build"
      ]
    },
    "copy:assets": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cp packages/mds-foundations/package.json dist/packages/mds-foundations/package.json"
        ]
      },
      "dependsOn": [
        "run:build"
      ]
    },
    "lint": {
      "executor": "nx:noop",
      "dependsOn": [
        "lint:stylelint"
      ]
    },
    "lint:stylelint": {
      "executor": "nx-stylelint:lint",
      "options": {
        "lintFilePatterns": [
          "packages/mds-foundations/**/*.css",
          "packages/mds-foundations/**/*.scss"
        ],
        "fix": true
      }
    },
    "release": {
      "command": "node tools/scripts/publish.mjs mds-foundations",
      "options": {
        "outputPath": "dist/packages/mds-foundations"
      }
    }
  },
  "tags": []
}