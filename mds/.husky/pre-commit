#!/usr/bin/env bash

echo "[HUSKY] pre-commit checks"
LC_ALL=C

local_branch="$(git rev-parse --abbrev-ref HEAD)"

valid_branch_regex="^(feat|fix|refactor|release|demo|chore|docs)\/[a-z0-9-]+$|^alpha$|^beta$"

message="There is something wrong with your branch name. Branch names in mds repo must adhere to this contract: $valid_branch_regex. Your push will be rejected. You should rename your branch to a valid name and try again."

if [[ ! $local_branch =~ $valid_branch_regex ]]
then
    echo "$message"
    exit 1
fi

exit 0
