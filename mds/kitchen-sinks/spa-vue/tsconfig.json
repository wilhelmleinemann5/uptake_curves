{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["./src/types/vuex.d.ts"],
    "paths": {
      "@maersk-global/mds-design-tokens/*": ["kitchen-sinks/spa-vue/node_modules/@maersk-global/mds-design-tokens/*"],
      "@maersk-global/mds-config/*": ["kitchen-sinks/spa-vue/node_modules/@maersk-global/mds-config/*"],
      "@maersk-global/mds-foundations/*": ["kitchen-sinks/spa-vue/node_modules/@maersk-global/mds-foundations/*"],
      "@maersk-global/mds-react-wrapper/*": ["kitchen-sinks/spa-vue/node_modules/@maersk-global/mds-react-wrapper/*"],
      "@maersk-global/mds-components-utils/*": [
        "kitchen-sinks/spa-vue/node_modules/@maersk-global/mds-components-utils/*"
      ],
      "@maersk-global/mds-shared-types/*": ["kitchen-sinks/spa-vue/node_modules/@maersk-global/mds-shared-types/*"],
      "@maersk-global/mds-components-core/*": [
        "kitchen-sinks/spa-vue/node_modules/@maersk-global/mds-components-core/*"
      ]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
  "extends": "../../tsconfig.base.json"
}
