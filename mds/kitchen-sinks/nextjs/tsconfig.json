{
  "extends": "../../tsconfig.base.json",
  "composite": true,
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@maersk-global/mds-design-tokens/*": ["kitchen-sinks/nextjs/node_modules/@maersk-global/mds-design-tokens/*"],
      "@maersk-global/mds-config/*": ["kitchen-sinks/nextjs/node_modules/@maersk-global/mds-config/*"],
      "@maersk-global/mds-foundations/*": ["kitchen-sinks/nextjs/node_modules/@maersk-global/mds-foundations/*"],
      "@maersk-global/mds-react-wrapper/*": ["kitchen-sinks/nextjs/node_modules/@maersk-global/mds-react-wrapper/*"],
      "@maersk-global/mds-components-utils/*": [
        "kitchen-sinks/nextjs/node_modules/@maersk-global/mds-components-utils/*"
      ],
      "@maersk-global/mds-shared-types/*": ["kitchen-sinks/nextjs/node_modules/@maersk-global/mds-shared-types/*"],
      "@maersk-global/mds-components-core/*": ["kitchen-sinks/nextjs/node_modules/@maersk-global/mds-components-core/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../kitchen-sinks/nextjs/.next/types/**/*.ts",
    "../../dist/kitchen-sinks/nextjs/.next/types/**/*.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "jest.config.ts", "**/*.spec.ts", "**/*.test.ts"]
}
